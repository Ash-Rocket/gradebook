<p id="notice"><%= notice %></p>
<%= button_to "Back to grades", grades_path, :method => "get" %>

<h1>Parents</h1>

<table>
  <thead>
    <tr>
      <th>Parent Name</th>
      <th>Email</th>
      <th>Child's Name</th>
      <th>Child's Teacher</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parents.each do |parent| %>
      <tr>
        <td><%= parent.name %></td>
        <td><%= parent.email %></td>
        <td><%= parent.student.name if parent.student !=nil %></td>
        <td><%= parent.student.teacher.name if parent.student !=nil %></td>
        <td><%= button_to 'Show', parent, :method => "get" %></td>
        <td><%= button_to 'Edit', edit_parent_path(parent), :method => "get" %></td>
        <td><%= button_to 'Destroy', parent, method: :delete, data: { confirm: 'Are you sure?' }, :method => "get" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'New Parent', new_parent_path, :method => "get" %>
