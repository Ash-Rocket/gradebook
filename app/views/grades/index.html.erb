<p id="notice"><%= notice %></p>

<% if @teacher %>
  <%= link_to 'Edit Teachers', teachers_path %><br>
  <%= link_to 'Edit Students', students_path %><br>
  <%= link_to 'Edit Parents', parents_path %>
<% elsif @student %>
  <%= link_to 'Edit Account', edit_student_path(current_user) %>
<% elsif @parent %>
  <%= link_to 'Edit Account', edit_parent_path(current_user) %>
<% end %>

<h1>Listing Grades</h1>

<table>
  <thead>
    <tr>
      <th>Student Name</th>
      <th>Grade</th>
      <th>Teacher</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grades.each do |grade| %>
      <tr>
        <td><%= grade.student.name %></td>
        <td><%= grade.grade_value %></td>
        <td><%= grade.student.teacher.name %></td>
        <% if @teacher %>
          <td><%= link_to 'Show', grade %></td>
          <td><%= link_to 'Edit', edit_grade_path(grade) %></td>
          <td><%= link_to 'Destroy', grade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if @teacher %>
  <%= link_to 'New Grade', new_grade_path %>
<% end %>
