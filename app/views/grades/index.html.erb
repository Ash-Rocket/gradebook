<p id="notice"><%= notice %></p>

<% if @teacher %>
  <%= button_to 'Edit Teachers', teachers_path, :method => "get" %><br>
  <%= button_to 'Edit Students', students_path, :method => "get" %><br>
  <%= button_to 'Edit Parents', parents_path, :method => "get" %>
<% elsif @student %>
  <%= button_to 'Edit Account', edit_student_path(current_user), :method => "get" %>
<% elsif @parent %>
  <%= button_to 'Edit Account', edit_parent_path(current_user), :method => "get" %>
<% end %>

<h1>Listing Grades</h1>

<table>
  <thead>
    <tr>
      <th>Student Name</th>
      <th>Grade</th>
      <th>Teacher</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grades.each do |grade| %>
      <tr>
        <td><%= grade.student.name %></td>
        <td><%= grade.grade_value %></td>
        <td><%= grade.student.teacher.name %></td>
        <% if @teacher %>
          <td><%= button_to 'Show', grade, :method => "get" %></td>
          <td><%= button_to 'Edit', edit_grade_path(grade), :method => "get" %></td>
          <td><%= button_to 'Destroy', grade, method: :delete, data: { confirm: 'Are you sure?' }, :method => "get" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if @teacher %>
  <%= button_to 'New Grade', new_grade_path, :method => "get" %>
<% end %>
