<p id="notice"><%= notice %></p>
<%= button_to "Return To Grades", grades_path, :method => "get" %>


<h1>Teachers</h1>

<table>
  <thead>
    <tr>
      <th>Teacher's Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.name %></td>
        <td><%= teacher.email %></td>
        <td><%= button_to 'Show', teacher, :method => "get" %></td>
        <td><%= button_to 'Edit', edit_teacher_path(teacher), :method => "get" %></td>
        <td><%= button_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' }, :method => "get" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'New Teacher', new_teacher_path, :method => "get" %>
